FROM node:20-alpine

WORKDIR /app

# Copy only package.json first for better caching
COPY package.json package-lock.json ./

# Ensure Vite and dependencies are installed
COPY bun.lock .

# Install dependencies
RUN npm install

# Copy the rest of the app
COPY . .

# Expose Vite port
EXPOSE 5173

# Start the app
CMD ["npm", "run", "dev"]